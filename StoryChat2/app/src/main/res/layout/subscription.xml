<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ad86bbed"
    android:layout_weight="0.2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:onClick="onClick">

        <Button
            android:id="@+id/free"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="150dp"
            android:background="#10a4f4"
            android:textColor="#ffffff"
            android:text="$0.99/week" />

    <!--    <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/free"
            android:gravity="center_horizontal"
            android:text="then $2.99/week" />-->

        <Button
            android:id="@+id/month"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="250dp"
            android:background="#10a4f4"
            android:textColor="#ffffff"
            android:text="1 month for $2.49" />

        <Button
            android:id="@+id/year"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="350dp"
            android:background="#10a4f4"
            android:textColor="#ffffff"
            android:text="1 year for $11.99" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/year"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:text="I already have subscripted plan " />
        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView3"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:text="No, I will wait till recharge " />

    </RelativeLayout>

</LinearLayout>