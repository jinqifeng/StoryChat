<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/lib/com.ids.storychat.storyChatActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"

    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="126dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/messageUserName"
            android:textSize="25dp"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_height="35dp" />
        <android.support.v7.widget.CardView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardUseCompatPadding="true"
            card_view:cardCornerRadius="8dp"
            android:layout_marginBottom="16dp"
            >
            <LinearLayout
                android:id="@+id/messageEditText_bubble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="20dp"
                android:orientation="vertical"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
             <!--   android:background="@drawable/bubble1"-->


                <com.jwn.storychat.emoji.EmojiconEditText
                    android:id="@+id/messageEditText"
                    android:layout_width="wrap_content"
                    android:layout_weight="0"
                    android:layout_height="wrap_content"
                    android:maxHeight="100dp"
                    android:minHeight="20dp"
                    android:minWidth="100dp"

                    android:enabled="false"
                    android:hint="please create new user!"
                    emojicon:emojiconSize="28sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ivImg"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/messageEditText"
                    android:layout_marginTop="5dp"
                    android:background="#eeeeee"/>
                <TextView
                    android:id="@+id/imagesource"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:text=" "
                    android:visibility="invisible"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#2979ff"
        android:orientation="horizontal"
        android:layout_marginBottom="38dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">



        <ImageButton
            android:id="@+id/addUserButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_person_add_white_24dp"
            android:layout_gravity="center"
             />
        <!--   android:layout_alignTop="@+id/button1"
           android:layout_toLeftOf="@+id/sendMessageButton"-->
        <Button
            android:id="@+id/addEmoji"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_insert_emoticon_white_24dp"
            android:layout_gravity="center"
            android:enabled="false"
            android:alpha="0.2"
             />


        <Button
            android:id="@+id/addPhoto"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_add_a_photo_white_24dp"
            android:layout_gravity="center"
            android:alpha="0.2"
            android:enabled="false"
            />

        <Button
            android:id="@+id/previewButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_visibility_white_24dp"
            android:alpha="0.2"
            android:enabled="false"
            android:layout_gravity="center"
            />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/user2Button"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="4dp"
            android:textColor="#ffffff"
            android:background="#304ffe"
            android:enabled="false"
            android:layout_gravity="center"

            />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/user1Button"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:layout_marginRight="4dp"
            android:text=""
            android:textColor="#ffffff"
            android:background="#304ffe"
            android:enabled="false" />
    <!--    <Button
            android:id="@+id/commant"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:layout_marginRight="4dp"
            android:background="@drawable/ic_insert_comment_white_24dp"
            android:enabled="false" />-->

    </LinearLayout>

    <LinearLayout
        android:id="@+id/form2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="106dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentLeft="true"
        android:visibility="invisible"
        android:layout_alignParentStart="true"
        >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="please input new user name!"
            android:layout_marginBottom="20dp"/>

        <android.support.v7.widget.CardView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardUseCompatPadding="true"
            card_view:cardCornerRadius="8dp"
            android:layout_marginBottom="16dp"
            >
        <com.jwn.storychat.emoji.EmojiconEditText
                android:id="@+id/userEditText"
                android:layout_width="wrap_content"
                android:layout_weight="0"
                android:layout_height="wrap_content"
                android:maxHeight="100dp"
                android:minHeight="20dp"
                android:minWidth="100dp"
                android:enabled="true"
                emojicon:emojiconSize="28sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/createUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="1dp"
            android:background="#2979ff"
            android:text="add"
            android:textColor="#ffffff" />

    </LinearLayout>


</RelativeLayout>