<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/view_layout"
    android:background="#223365"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layoutrecycle"
        android:layout_marginBottom="230dp"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/storycnt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/buttons"
        android:layout_marginTop="367dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <Button
            android:id="@+id/next_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:background="@drawable/btn_blue" style="@style/ButtonText"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
             />
        <Button
            android:id="@+id/publish_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Publish"
            android:background="@drawable/btn_blue" style="@style/ButtonText"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/next_view"
            />
        <Button
            android:id="@+id/view_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:background="@drawable/btn_blue" style="@style/ButtonText"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/publish_button"
            />

        <Button
            android:id="@+id/view_backbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:background="@drawable/btn_blue" style="@style/ButtonText"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="30dp"
            android:layout_below="@+id/view_save"
           />
    </RelativeLayout>

</RelativeLayout>