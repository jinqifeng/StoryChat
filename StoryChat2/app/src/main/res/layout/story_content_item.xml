<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/lib/com.ids.storychat.storyChatActivity"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="8dp"
    android:layout_marginBottom="16dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/cntitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

            <TextView
            android:id="@+id/UserName"
            android:textSize="15dp"
            android:layout_gravity="left"
            android:layout_width="60dp"
            android:layout_marginRight="10dp"
            android:textColor="#000000"
            android:text="#ererer"
            android:layout_height="35dp" />

            <com.jwn.storychat.emoji.EmojiconEditText
                android:id="@+id/EditText"
                android:layout_width="wrap_content"
                android:layout_weight="0"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                android:background="#ffffff"
                android:enabled="true"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                emojicon:emojiconSize="15dp" />
    </LinearLayout>
        <ImageView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/ivImgt"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_below="@+id/cntitem"
            android:layout_marginTop="5dp"
            android:background="#eeeeee"/>

    </RelativeLayout>



</android.support.v7.widget.CardView>