<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/lib/com.ids.storychat.storyChatActivity"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/cntitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/UserName"
            android:textSize="15dp"
            android:layout_gravity="left"
            android:layout_width="60dp"
            android:layout_marginRight="10dp"
            android:layout_height="35dp" />
        <LinearLayout
            android:id="@+id/EditText_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:minHeight="30dp"
            >

            <com.ids.storychat.emoji.EmojiconEditText
                android:id="@+id/EditText"
                android:layout_width="320dp"
                android:layout_weight="0"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                android:background="#ffffff"
                android:enabled="true"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                emojicon:emojiconSize="15dp" />

        </LinearLayout>


    </LinearLayout>

    <ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ivImgt"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/EditText_bubble"
    android:layout_marginTop="5dp"
    android:background="#eeeeee"
    />
</LinearLayout>